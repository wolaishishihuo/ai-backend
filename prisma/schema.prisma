generator client {
  provider = "prisma-client-js"
}

// 指定数据库
datasource db {
  provider = "mysql"
}


model User {
  id          String   @id @default(uuid())
  username    String
  password    String
  email       String   @unique
  avatar      String   @default("https://avatars.githubusercontent.com/u/100000000?v=4")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

